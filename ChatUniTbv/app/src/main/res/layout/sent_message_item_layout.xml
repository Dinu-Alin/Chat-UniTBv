<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:id="@+id/sent_message_full"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/sent_card_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="2dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardUseCompatPadding="true"
        >

        <TextView
            android:id="@+id/sent_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="2dp"
            android:maxWidth="250dp"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/long_body"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:autoLink="all"
            android:textColorLink="@color/white"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sent_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/sent_card_view_message"
        android:text="@string/example_time_string"
        android:textAlignment="viewEnd"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/sent_card_view_message"
        app:layout_constraintBottom_toBottomOf="@id/sent_card_view_message"
        app:layout_constraintRight_toLeftOf="@id/sent_card_view_message"
        android:layout_marginStart="2dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>